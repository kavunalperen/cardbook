<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_bigcell_bg">

    <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/kampanyalarListCardImage"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@+id/imageView1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/list_img_bg" />

    <TextView
                android:id="@+id/kampanyalarListTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="isim"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/kartlarim_list_text_color"
                android:textSize="16sp"
                android:duplicateParentState="true"
                android:layout_alignLeft="@+id/kampanyalarListTvDate"
                android:layout_alignBaseline="@+id/kampanyalarListCardImage"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/imageView"
                android:ellipsize="end"
                android:layout_marginRight="15dp"/>

    <TextView
            android:id="@+id/kampanyalarListTvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desription Header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color8E8E93"
            android:textSize="12sp"
            android:duplicateParentState="true"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/kampanyalarListTvName"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_marginRight="15dp"
            android:maxLines="2"
            android:ellipsize="end"/>


    <TextView
            android:id="@+id/kampanyalarListTvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Tarih"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorFF3B30"
            android:textSize="9sp"
            android:duplicateParentState="true"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/kampanyalarListCardImage"
            android:layout_below="@+id/kampanyalarListCardImage"/>


    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/kartlari_list_arrow"
                android:id="@+id/imageView"/>

</RelativeLayout>
