<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/splash_bg"
              android:gravity="center_horizontal">


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal" >


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@drawable/splash_logo"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="50dp" />

            <EditText
                    android:layout_width="@dimen/input_user_information_width"
                    android:layout_height="@dimen/input_user_information_height"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/editFirstName"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/input_user_information_margin_vertical"
                    />

            <EditText
                    android:layout_width="@dimen/input_user_information_width"
                    android:layout_height="@dimen/input_user_information_height"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/editLastName"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/input_user_information_margin_vertical"/>

            <EditText
                    android:layout_width="@dimen/input_user_information_width"
                    android:layout_height="@dimen/input_user_information_height"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editMail"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/input_user_information_margin_vertical"/>

            <EditText
                    android:layout_width="@dimen/input_user_information_width"
                    android:layout_height="@dimen/input_user_information_height"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editPhoneHome"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/input_user_information_margin_vertical"/>

            <EditText
                    android:layout_width="@dimen/input_user_information_width"
                    android:layout_height="@dimen/input_user_information_height"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editPhoneMobile"
                    android:layout_marginBottom="@dimen/input_user_information_margin_vertical"/>

            <EditText
                    android:layout_width="@dimen/input_user_information_width"
                    android:layout_height="@dimen/input_user_information_height"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/editBirthDate"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/input_user_information_margin_vertical"/>

            <EditText
                    android:layout_width="@dimen/input_user_information_width"
                    android:layout_height="@dimen/input_user_information_height"
                    android:inputType="textPostalAddress"
                    android:ems="10"
                    android:id="@+id/editAddress"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/input_user_information_margin_vertical"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button"
                    android:layout_gravity="right"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>