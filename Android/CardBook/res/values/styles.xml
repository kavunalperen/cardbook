<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerStyle">@style/holoSpinner</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="userInformationInput">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/input_user_information_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginBottom">@dimen/input_user_information_margin_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/user_information_input_bg</item>
    </style>

    <style name="holoSpinner" parent="@android:style/Theme">
        <item name="android:layout_height">@dimen/input_user_information_height</item>
        <item name="android:background">@drawable/user_information_input_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#959494</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

</resources>
